{% extends 'base.html.twig' %}

{% block title %}Administrateur index{% endblock %}

{% block body %}
    <h1>Administrateur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>MotDePasse</th>
                <th>Role</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for administrateur in administrateurs %}
            <tr>
                <td>{{ administrateur.id }}</td>
                <td>{{ administrateur.nom }}</td>
                <td>{{ administrateur.prenom }}</td>
                <td>{{ administrateur.email }}</td>
                <td>{{ administrateur.motDePasse }}</td>
                <td>{{ administrateur.role }}</td>
                <td>{{ administrateur.telephone }}</td>
                <td>{{ administrateur.adresse }}</td>
                <td>{{ administrateur.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_administrateur_show', {'id': administrateur.id}) }}">show</a>
                    <a href="{{ path('app_administrateur_edit', {'id': administrateur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_administrateur_new') }}">Create new</a>
{% endblock %}
