{% extends 'base.html.twig' %}

{% block title %}Profil de {{ professionnel.prenom }} {{ professionnel.nom }} | Professionnel de Santé{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #3a86ff;
            --secondary-color: #8338ec;
            --accent-color: #ff006e;
            --light-color: #f8f9fa;
            --dark-color: #212529;
            --gray-color: #6c757d;
            --border-radius: 12px;
            --box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        /* Base Styles */
        .professional-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
            font-family: 'Poppins', sans-serif;
        }

        /* Profile Header */
        .profile-header {
            height: 250px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: var(--border-radius) var(--border-radius) 0 0;
            display: flex;
            justify-content: center;
        }

        .profile-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
            opacity: 0.5;
        }

        .profile-image-wrapper {
            position: relative;
            margin-top: 75px;
            z-index: 2;
        }

        .profile-image {
            width: 180px;
            height: 180px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid white;
            box-shadow: var(--box-shadow);
            background-color: white;
            transition: transform 0.3s ease;
        }

        .profile-image:hover {
            transform: scale(1.05);
        }

        /* Profile Info */
        .profile-info {
            background: white;
            padding: 2.5rem 2rem 2rem;
            border-radius: 0 0 var(--border-radius) var(--border-radius);
            box-shadow: var(--box-shadow);
            margin-bottom: 2rem;
            margin-top: -90px;
            position: relative;
            z-index: 1;
        }

        .profile-name {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
            text-align: center;
            margin-top: 100px;
        }

        .profile-title {
            font-size: 1.25rem;
            color: var(--primary-color);
            text-align: center;
            margin-bottom: 1.5rem;
            font-weight: 500;
            letter-spacing: 0.5px;
        }

        .profile-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
            justify-content: center;
            margin: 2rem 0;
            padding: 1.5rem;
            background-color: var(--light-color);
            border-radius: var(--border-radius);
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: var(--dark-color);
            font-size: 1rem;
        }

        .meta-icon {
            width: 24px;
            height: 24px;
            color: var(--primary-color);
        }

        /* Stats Section */
        .profile-stats {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin: 2.5rem 0;
            flex-wrap: wrap;
        }

        .stat-item {
            background: white;
            padding: 1.75rem;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            text-align: center;
            min-width: 180px;
            transition: var(--transition);
            border-top: 4px solid var(--primary-color);
        }

        .stat-item:nth-child(2) {
            border-top-color: var(--secondary-color);
        }

        .stat-item:nth-child(3) {
            border-top-color: var(--accent-color);
        }

        .stat-item:hover {
            transform: translateY(-8px);
        }

        .stat-number {
            font-size: 2.25rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.75rem;
        }

        .stat-item:nth-child(2) .stat-number {
            color: var(--secondary-color);
        }

        .stat-item:nth-child(3) .stat-number {
            color: var(--accent-color);
        }

        .stat-label {
            color: var(--gray-color);
            font-size: 1rem;
            font-weight: 500;
        }

        /* Sections */
        .content-section {
            background: white;
            padding: 2rem;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            margin-bottom: 2rem;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 1.5rem;
            position: relative;
            padding-bottom: 0.75rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 3px;
            background: var(--primary-color);
        }

        .section-title svg {
            color: var(--primary-color);
        }

        .work-experience {
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px dashed #e0e0e0;
        }

        .work-experience:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

        .work-position {
            font-size: 1.35rem;
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
        }

        .work-company {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--primary-color);
            margin-bottom: 0.75rem;
            font-weight: 500;
        }

        .work-description {
            color: var(--dark-color);
            line-height: 1.7;
            margin-bottom: 1rem;
        }

        /* Horaires Section */
        .horaires-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .horaire-card {
            background-color: var(--light-color);
            padding: 1rem;
            border-radius: var(--border-radius);
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .horaire-day {
            font-weight: 600;
            color: var(--primary-color);
            font-size: 1.1rem;
        }

        .horaire-time {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .horaire-time svg {
            color: var(--gray-color);
        }

        /* Buttons */
        .action-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 2.5rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .btn {
            padding: 0.85rem 1.75rem;
            border-radius: var(--border-radius);
            font-weight: 500;
            text-decoration: none;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-secondary {
            background-color: white;
            color: var(--primary-color);
            border: 1px solid var(--primary-color);
        }

        .btn-secondary:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(58, 134, 255, 0.2);
        }

        .btn-warning {
            background-color: var(--accent-color);
            color: white;
            border: 1px solid var(--accent-color);
        }

        .btn-warning:hover {
            background-color: #d9005e;
            border-color: #d9005e;
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(255, 0, 110, 0.2);
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: white;
            border: 1px solid var(--primary-color);
        }

        .btn-primary:hover {
            background-color: #2a75e6;
            border-color: #2a75e6;
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(58, 134, 255, 0.2);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .profile-header {
                height: 200px;
            }

            .profile-image-wrapper {
                margin-top: 50px;
            }

            .profile-image {
                width: 150px;
                height: 150px;
            }

            .profile-info {
                margin-top: -75px;
                padding-top: 2rem;
            }

            .profile-name {
                font-size: 1.75rem;
                margin-top: 80px;
            }

            .profile-title {
                font-size: 1.1rem;
            }

            .profile-meta {
                gap: 1rem;
                padding: 1rem;
            }

            .profile-stats {
                gap: 1rem;
            }

            .stat-item {
                min-width: 150px;
                padding: 1.25rem;
            }

            .stat-number {
                font-size: 1.75rem;
            }

            .content-section {
                padding: 1.5rem;
            }
        }

        @media (max-width: 576px) {
            .profile-header {
                height: 180px;
            }

            .profile-image-wrapper {
                margin-top: 40px;
            }

            .profile-image {
                width: 130px;
                height: 130px;
            }

            .profile-info {
                margin-top: -65px;
            }

            .profile-name {
                font-size: 1.5rem;
                margin-top: 70px;
            }

            .profile-meta {
                flex-direction: column;
                align-items: flex-start;
            }

            .profile-stats {
                flex-direction: column;
                align-items: center;
            }

            .stat-item {
                width: 100%;
            }

            .horaires-grid {
                grid-template-columns: 1fr;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="professional-container">
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="profile-image-wrapper">
                <img src="{{ asset('uploads/professionnels/resized/' ~ professionnel.photo|replace({
                '.jpg': '_resized.jpg',
                '.png': '_resized.png',
                '.gif': '_resized.gif'
            })) }}" 
                alt="Photo de {{ professionnel.prenom }} {{ professionnel.nom }}" 
                class="profile-image"
                onerror="this.src='https://ui-avatars.com/api/?name={{ professionnel.prenom|url_encode }}+{{ professionnel.nom|url_encode }}&background=3a86ff&color=fff&size=180'">
            </div>
        </div>
        
        <!-- Profile Info -->
        <div class="profile-info">
            <h1 class="profile-name">{{ professionnel.prenom }} {{ professionnel.nom }}</h1>
            <div class="profile-title">
                {% if professionnel.titre_professionnel is defined and professionnel.titre_professionnel %}
                    {{ professionnel.titre_professionnel }} 
                {% endif %}
                {% if professionnel.specialite is defined and professionnel.specialite %}
                    • {{ professionnel.specialite.nom }}
                {% else %}
                    • Professionnel de Santé
                {% endif %}
            </div>
            
            <div class="profile-meta">
                {% if professionnel.adresse is defined and professionnel.adresse %}
                <div class="meta-item">
                    <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <span>{{ professionnel.adresse }}</span>
                </div>
                {% endif %}
                
                {% if professionnel.etablissement is defined and professionnel.etablissement %}
                <div class="meta-item">
                    <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    <span>{{ professionnel.etablissement }}</span>
                </div>
                {% endif %}
                
                {% if professionnel.email is defined and professionnel.email %}
                <div class="meta-item">
                    <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    <span>{{ professionnel.email }}</span>
                </div>
                {% endif %}
                
                {% if professionnel.telephone is defined and professionnel.telephone %}
                <div class="meta-item">
                    <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <span>{{ professionnel.telephone }}</span>
                </div>
                {% endif %}
            </div>            
        </div><!-- Stats Section -->
        <div class="profile-stats">
            <div class="stat-item">
                <div class="stat-number">
                    {{ nombrePatients }}
                </div>
                <div class="stat-label">Patients</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">
                    {{ moyenneAvis|number_format(1, '.', '') }}
                </div>
                <div class="stat-label">Moyenne des avis</div>
            </div>
        </div>
        <!-- Specialty Section -->
        {% if professionnel.specialite is defined and professionnel.specialite %}
        <div class="content-section">
            <h2 class="section-title">
                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                </svg>
                Spécialité
            </h2>
            
            <div class="work-experience">
                <h3 class="work-position">{{ professionnel.specialite.nom }}</h3>
                <div class="work-company">
                    <span>{{ professionnel.specialite.categorie }} - {{ professionnel.specialite.sousCategorie }}</span>
                </div>
                <p class="work-description">
                    {{ professionnel.specialite.description }}
                </p>
            </div>
        </div>
        {% endif %}

        <!-- Horaires Section -->
        {% if horairesTravail is defined and horairesTravail|length > 0 %}
        <div class="content-section">
            <h2 class="section-title">
                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Horaires de consultation
            </h2>
            
            <div class="horaires-grid">
                {% for horaire in horairesTravail %}
                    <div class="horaire-card">
                        <div class="horaire-day">
                            {% set jourMap = {
                                'MONDAY': 'Lundi',
                                'TUESDAY': 'Mardi',
                                'WEDNESDAY': 'Mercredi',
                                'THURSDAY': 'Jeudi',
                                'FRIDAY': 'Vendredi',
                                'SATURDAY': 'Samedi',
                                'SUNDAY': 'Dimanche'
                            } %}
                            {{ jourMap[horaire.jour]|default(horaire.jour) }}
                        </div>
                        <div class="horaire-time">
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <span>{{ horaire.heureDebut }} - {{ horaire.heureFin }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        <!-- Action Buttons -->
        <div class="action-buttons">
            {% if app.user.role == 'ROLE_PROFESSIONNEL_DE_SANTE' %}
                
            {% else %}
                <a href="{{ path('app_search') }}" class="btn btn-secondary">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Retour à la liste
            </a>
            {% endif %}
            
            
            
            {% if app.user and (app.user.id == professionnel.id or is_granted('ROLE_ADMIN')) %}
            <a href="{{ path('app_professionnel_de_sante_edit', {'id': professionnel.id}) }}" class="btn btn-warning">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Modifier le profil
            </a>
            {% endif %}
            
        </div>
    </div>
{% endblock %}