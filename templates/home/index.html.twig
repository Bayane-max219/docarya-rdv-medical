{% extends 'base.html.twig' %}

{% block title %}Plateforme Santé - Trouvez votre professionnel{% endblock %}

{% block body %}
    <div class="xk7p2_container">
        <!-- En-tête de la page -->
        <header class="qm3j8_header">
            <h1 class="zt5v9_title">Trouvez votre professionnel de santé</h1>
            <p class="lp6r4_subtitle">Recherchez parmi nos spécialistes qualifiés et prenez rendez-vous en quelques clics</p>
        </header>

        <!-- Affichage des messages flash -->
        {% if app.session.flashbag.has('error') %}
            <div class="gf2h7_flash_container">
                {% for message in app.session.flashbag.get('error') %}
                    <div class="yw9k1_flash_error">
                        <svg class="bn4t6_icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10zm-1-7v2h2v-2h-2zm0-8v6h2V7h-2z" fill="currentColor"/>
                        </svg>
                        <span>{{ message }}</span>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <!-- SECTION DE RECHERCHE HORIZONTALE AU-DESSUS DES RÉSULTATS -->
        <section class="jt7r2_search_section">
            <form action="{{ path('app_search') }}" method="get" class="qs8w3_search_form stylish-search-form horizontal-search-form mb-4">
                <div class="row g-3 align-items-start w-100">
                    <div class="col-md-6">
                        <label for="specialite_nom" class="xz2v8_label stylish-label mb-1">Spécialité ou nom</label>
                        <div class="position-relative">
                            <input type="text" id="specialite_nom" name="specialite_nom" value="{{ filters.specialite_nom ?? '' }}" class="form-control stylish-input rq9t2_input ps-5" placeholder="Ex: Cardiologue, Dr. Martin...">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="localisation" class="xz2v8_label stylish-label mb-1">Localisation</label>
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <button type="button" id="use_current_location" class="rq9t2_location_btn w-100">
                                <i class="fas fa-location-crosshairs me-2"></i>
                                Utiliser ma position actuelle
                            </button>
                            <button type="button" id="toggleGeolocDetails" class="btn btn-link p-0 stylish-advanced-btn simple-advanced-btn" style="box-shadow:none; background:none; color:inherit; font-weight:500; font-size:1.25rem; display:flex; align-items:center; gap:0.5rem;" aria-label="Afficher/masquer la géolocalisation">
                                <i class="fas fa-chevron-down geoloc-chevron" style="font-size:1.2rem; transition: transform 0.3s;"></i>
                            </button>
                        </div>
                        <span id="location_status" class="zx5c8_location_status ms-2"></span>
                        <input type="hidden" id="user_latitude" name="user_latitude" value="{{ filters.user_latitude ?? '' }}">
                        <input type="hidden" id="user_longitude" name="user_longitude" value="{{ filters.user_longitude ?? '' }}">
                        <div class="geoloc-details-collapse" id="geolocDetails">
                            <div class="uy4k7_form_group" id="radius_group" style="margin-top:10px;">
                                <label for="search_radius" class="xz2v8_label">Rayon de recherche (km)</label>
                                <input type="range" id="search_radius" name="search_radius" min="1" max="100" value="{{ filters.search_radius ?? 10 }}" class="rq9t2_range">
                                <span id="radius_value">{{ filters.search_radius ?? 10 }} km</span>
                            </div>
                            <div class="uy4k7_form_group" id="travel_mode_group" style="margin-top:10px;">
                                <label for="travel_mode" class="xz2v8_label">Mode de transport</label>
                                <select id="travel_mode" name="travel_mode" class="rq9t2_input">
                                    <option value="driving" {% if filters.travel_mode == 'driving' %}selected{% endif %}>Voiture</option>
                                    <option value="walking" {% if filters.travel_mode == 'walking' %}selected{% endif %}>Marche</option>
                                    <option value="bicycling" {% if filters.travel_mode == 'bicycling' %}selected{% endif %}>Vélo</option>
                                    <option value="transit" {% if filters.travel_mode == 'transit' %}selected{% endif %}>Transport en commun</option>
                                </select>
                            </div>
                            <div id="map-filtre" style="height: 300px; margin-top: 15px;"></div>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="d-flex gap-2 flex-wrap flex-md-nowrap align-items-end stylish-action-row">
                            <button type="button" class="nh6b2_toggle_filters btn btn-link p-0 stylish-advanced-btn simple-advanced-btn" id="toggleFilters" style="margin-bottom:0; box-shadow:none; background:none; color:inherit; font-weight:500; font-size:1.25rem; display:flex; align-items:center; gap:0.5rem;">
                                <span>Filtres avancés</span>
                                <i class="fas fa-chevron-down ms-2" style="font-size:1.2rem;"></i>
                            </button>
                            <button type="reset" class="nh6b2_reset_btn btn btn-outline-secondary stylish-reset-btn">
                                <i class="fas fa-sync-alt me-1 text-secondary"></i>
                                Réinitialiser
                            </button>
                            <button type="submit" class="vm4k9_submit_btn btn btn-primary stylish-search-btn">
                                <i class="fas fa-search me-1 text-white"></i>
                                Rechercher
                            </button>
                        </div>
                        <div class="mt-3">
                            <div class="vm4k9_filter_grid nh6b2_hidden" id="advancedFilters">
                                <!-- Copie ici le contenu des filtres avancés existants, sans la géolocalisation -->
                                <div class="uy4k7_form_group">
                                    <label for="tarif_min" class="xz2v8_label">Tarif minimum (Ariary)</label>
                                    <input type="number" id="tarif_min" name="tarif_min" value="{{ filters.tarif_min ?? '' }}" class="rq9t2_input" placeholder="Min">
                                </div>
                                <div class="uy4k7_form_group">
                                    <label for="tarif_max" class="xz2v8_label">Tarif maximum (Ariary)</label>
                                    <input type="number" id="tarif_max" name="tarif_max" value="{{ filters.tarif_max ?? '' }}" class="rq9t2_input" placeholder="Max">
                                </div>
                                <div class="uy4k7_form_group">
                                    <label for="jour" class="xz2v8_label">Jour disponible</label>
                                    <select id="jour" name="jour" class="rq9t2_input">
                                        <option value="">Tous les jours</option>
                                        <option value="Lundi" {% if filters.jour == 'Lundi' %} selected {% endif %}>Lundi</option>
                                        <option value="Mardi" {% if filters.jour == 'Mardi' %} selected {% endif %}>Mardi</option>
                                        <option value="Mercredi" {% if filters.jour == 'Mercredi' %} selected {% endif %}>Mercredi</option>
                                        <option value="Jeudi" {% if filters.jour == 'Jeudi' %} selected {% endif %}>Jeudi</option>
                                        <option value="Vendredi" {% if filters.jour == 'Vendredi' %} selected {% endif %}>Vendredi</option>
                                        <option value="Samedi" {% if filters.jour == 'Samedi' %} selected {% endif %}>Samedi</option>
                                        <option value="Dimanche" {% if filters.jour == 'Dimanche' %} selected {% endif %}>Dimanche</option>
                                    </select>
                                </div>
                                <div class="uy4k7_form_group">
                                    <label for="heure_debut" class="xz2v8_label">Disponible depuis</label>
                                    <select id="heure_debut" name="heure_debut" class="rq9t2_input">
                                        <option value="">Toutes les heures</option>
                                        {% for h in range(8, 20) %}
                                            <option value="{{ h }}h00" {% if filters.heure_debut == h ~ 'h00' %} selected {% endif %}>{{ h }}h00</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="uy4k7_form_group">
                                    <label for="heure_fin" class="xz2v8_label">Disponible jusqu'à</label>
                                    <select id="heure_fin" name="heure_fin" class="rq9t2_input">
                                        <option value="">Toutes les heures</option>
                                        {% for h in range(8, 20) %}
                                            <option value="{{ h }}h00" {% if filters.heure_fin == h ~ 'h00' %} selected {% endif %}>{{ h }}h00</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>

        <!-- Section des résultats EN DEHORS DU WRAPPER GRID -->
        <section class="uy4k7_results_section wide-results-section real-full-width-section">
            <div class="xz2v8_results_header better-align">
                <h2 class="gt7h3_section_title">Professionnels disponibles</h2>
                {% if professionnels|length > 0 %}
                    <p class="kp3j7_results_count">{{ professionnels|length }} résultat(s) trouvé(s)</p>
                {% endif %}
            </div>
            {% if professionnels|length > 0 %}
                <div class="table-responsive custom-table-responsive">
                    <table class="table align-middle mb-0 bg-white pro-table">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Spécialité</th>
                                <th scope="col">Horaires</th>
                                <th scope="col">Tarif</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for pro in professionnels %}
                                <tr>
                                    <td class="d-flex align-items-center gap-2">
                                        {% if pro.professionnel.photo != NULL %}
                                            <img class="rounded-circle" src="{{ asset('uploads/professionnels/resized/' ~ pro.professionnel.photo|replace({'.jpg': '_resized.jpg','.png': '_resized.png','.gif': '_resized.gif'})) }}" alt="Photo de {{ pro.professionnel.prenom }} {{ pro.professionnel.nom }}" style="width:40px;height:40px;object-fit:cover;" onerror="this.src='https://ui-avatars.com/api/?name={{ pro.professionnel.prenom|url_encode }}+{{ pro.professionnel.nom|url_encode }}&background=3a86ff&color=fff&size=150'">
                                        {% else %}
                                            <span class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width:40px;height:40px;font-weight:600;">{{ pro.professionnel.prenom|first }}{{ pro.professionnel.nom|first }}</span>
                                        {% endif %}
                                        <span class="fw-bold">Dr. {{ pro.professionnel.prenom }} {{ pro.professionnel.nom }}</span>
                                    </td>
                                    <td>{{ pro.professionnel.specialite.nom }}</td>
                                    <td>
                                        <span class="zx5c8_schedule_toggle text-primary d-inline-flex align-items-center" style="cursor:pointer;">
                                            <svg class="me-1" width="18" height="18" fill="none" stroke="#3b82f6" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
                                            Voir les horaires
                                        </span>
                                    </td>
                                    <td>
                                        <span class="d-inline-flex align-items-center">
                                            <svg class="me-1" width="24" height="24" fill="none" stroke="#6b7280" stroke-width="2" viewBox="0 0 24 24">
                                                <circle cx="12" cy="12" r="10"/>
                                                <text x="12" y="16" text-anchor="middle" font-size="12" fill="#6b7280" font-family="Arial" font-weight="bold">$</text>
                                            </svg>
                                            {{ pro.professionnel.tarif }} Ariary
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="d-inline-flex align-items-center gap-2">
                                            <a href="#" class="zx5c8_profile_btn btn btn-primary me-2 d-inline-flex align-items-center"
                                               data-bs-toggle="modal"
                                               data-bs-target="#profilModal{{ pro.professionnel.id }}">
                                                <svg class="bn4t6_icon me-1" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                                    <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                                </svg>
                                                Voir le profil
                                            </a>
                                            <a href="{{ path('app_professionnel_avis', {'id': pro.professionnel.id}) }}" class="nh6b2_review_btn btn btn-outline-secondary d-inline-flex align-items-center">
                                                <svg class="bn4t6_icon me-1" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                                </svg>
                                                Avis
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <tr class="nh6b2_schedule_panel" style="display:none;">
                                    <td colspan="5">
                                        {% if pro.horairesTravail is iterable and pro.horairesTravail|length > 0 %}
                                            <div class="vm4k9_schedule_grid d-flex flex-wrap gap-3">
                                                {% for horaire in pro.horairesTravail %}
                                                    <div class="uy4k7_schedule_day">
                                                        <span class="xz2v8_day_name">{{ horaire.jour|slice(0, 3) }}</span>
                                                        <span class="gt7h3_day_hours">{{ horaire.heureDebut }} - {{ horaire.heureFin }}</span>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        {% else %}
                                            <p class="kp3j7_no_schedule">Aucun horaire disponible</p>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- Pagination -->
                {% if totalPages > 1 %}
                    <div class="vm4k9_pagination mt-3">
                        {% if currentPage > 1 %}
                            <a href="{{ path('app_search', {'page': currentPage - 1} + filters|merge({})) }}" class="uy4k7_page_btn uy4k7_prev">
                                <svg class="bn4t6_icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M15 19l-7-7 7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                Précédent
                            </a>
                        {% endif %}
                        
                        <div class="xz2v8_page_numbers">
                            {% for i in 1..totalPages %}
                                {% if i == currentPage %}
                                    <span class="gt7h3_page_current">{{ i }}</span>
                                {% elseif i == 1 or i == totalPages or (i >= currentPage - 1 and i <= currentPage + 1) %}
                                    <a href="{{ path('app_search', {'page': i} + filters|merge({})) }}" class="gt7h3_page_link">{{ i }}</a>
                                {% elseif i == 2 or i == totalPages - 1 %}
                                    <span class="gt7h3_page_dots">...</span>
                                {% endif %}
                            {% endfor %}
                        </div>
                        
                        {% if currentPage < totalPages %}
                            <a href="{{ path('app_search', {'page': currentPage + 1} + filters|merge({})) }}" class="uy4k7_page_btn uy4k7_next">
                                Suivant
                                <svg class="bn4t6_icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M9 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </a>
                        {% endif %}
                    </div>
                {% endif %}
            {% else %}
                <div class="kp3j7_no_results">
                    <svg class="rq9t2_no_results_icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <h3>Aucun professionnel trouvé</h3>
                    <p>Essayez de modifier vos critères de recherche pour obtenir plus de résultats.</p>
                    <button type="button" class="zx5c8_reset_search">Réinitialiser la recherche</button>
                </div>
            {% endif %}
        </section>
    </div>
