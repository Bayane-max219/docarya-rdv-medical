{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
    $(document).ready(function() {
        $('.modal').on('shown.bs.modal', function () {
            var mapDiv = $(this).find('.map-modal')[0];
            if (mapDiv && !mapDiv.classList.contains('leaflet-container') && mapDiv.offsetWidth > 400) {
                var lat = parseFloat(mapDiv.getAttribute('data-lat')) || 48.8566;
                var lng = parseFloat(mapDiv.getAttribute('data-lng')) || 2.3522;
                var map = L.map(mapDiv).setView([lat, lng], 15);
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; OpenStreetMap contributors'
                }).addTo(map);
                L.marker([lat, lng]).addTo(map);
                setTimeout(function() { map.invalidateSize(); }, 350);
                setTimeout(function() { map.invalidateSize(); }, 800);
                setTimeout(function() { map.invalidateSize(); }, 1200);
            }
        });
        $('.modal').on('hidden.bs.modal', function () {
            var mapDiv = $(this).find('.map-modal')[0];
            if (mapDiv && mapDiv._leaflet_id) {
                mapDiv._leaflet_id = null;
                mapDiv.innerHTML = '';
            }
        });
    });
    document.addEventListener('DOMContentLoaded', function() {
        var mapDiv = document.querySelector('.map-modal');
        if (mapDiv) {
            console.log('TEST: Init carte directe sur .map-modal', mapDiv);
            var lat = parseFloat(mapDiv.getAttribute('data-lat')) || 48.8566;
            var lng = parseFloat(mapDiv.getAttribute('data-lng')) || 2.3522;
            var map = L.map(mapDiv).setView([lat, lng], 15);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);
            L.marker([lat, lng]).addTo(map);
        } else {
            console.log('TEST: Aucun .map-modal trouvé au chargement');
        }
            // Active le tab sauvegardé ou le premier tab
            const savedTab = localStorage.getItem('lastTab');
            if (savedTab) {
                const tabEl = document.querySelector(savedTab);
                if (tabEl) {
                    const tab = new bootstrap.Tab(tabEl);
                    tab.show();
                }
            }

            // Sauvegarde le dernier tab actif
            const tabEls = document.querySelectorAll('button[data-bs-toggle="tab"]');
            tabEls.forEach(tabEl => {
                tabEl.addEventListener('click', function() {
                    localStorage.setItem('lastTab', this.getAttribute('data-bs-target'));
                    
                    // Gestion manuelle des classes active pour l'affichage
                    document.querySelectorAll('.tab-button').forEach(btn => {
                        btn.classList.remove('active');
                    });
                    this.classList.add('active');
                    
                    // Gestion manuelle de l'affichage des panneaux
                    const target = this.getAttribute('data-bs-target');
                    document.querySelectorAll('.tab-pane').forEach(pane => {
                        pane.classList.remove('show', 'active');
                    });
                    document.querySelector(target).classList.add('show', 'active');
                });
            });
            
            // Animation des cartes au chargement
            const cards = document.querySelectorAll('.professional-card, .appointment-card, .consultation-card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 100 * index);
            });

            // Initialisation dynamique de la carte Leaflet dans le modal profil
            var modals = document.querySelectorAll('.modal');
            modals.forEach(function(modal) {
                console.log('Ajout listener shown.bs.modal sur', modal);
                modal.addEventListener('shown.bs.modal', function (event) {
                    console.log('Modal ouvert, tentative d\'init carte', modal);
                    var mapDiv = modal.querySelector('.map-modal');
                    console.log('Init carte modal', mapDiv);
                    if (!mapDiv) {
                        console.warn('Aucun div .map-modal trouvé dans le modal, annulation de l\'init Leaflet');
                        return;
                    }
                    mapDiv.style.height = '300px';
                    if (mapDiv._leaflet_id) {
                        try {
                            mapDiv._leaflet_id = null;
                            mapDiv.innerHTML = '';
                        } catch (e) {}
                    }
                    var tryCount = 0;
                    function tryInitMap() {
                        if (!mapDiv) {
                            console.warn('Div .map-modal disparu, annulation de l\'init Leaflet');
                            return;
                        }
                        var w = mapDiv.offsetWidth;
                        var h = mapDiv.offsetHeight;
                        if (w > 0 && h > 0) {
                            if (mapDiv.classList.contains('leaflet-container')) {
                                console.log('Carte déjà initialisée, on skip');
                                return;
                            }
                            var lat = parseFloat(mapDiv.getAttribute('data-lat')) || 48.8566;
                            var lng = parseFloat(mapDiv.getAttribute('data-lng')) || 2.3522;
                            var map = L.map(mapDiv).setView([lat, lng], 15);
                            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                                attribution: '&copy; OpenStreetMap contributors'
                            }).addTo(map);
                            L.marker([lat, lng]).addTo(map);
                            setTimeout(function() { map.invalidateSize(); }, 350);
                            console.log('Carte Leaflet initialisée', map);
                        } else if (tryCount < 5) {
                            tryCount++;
                            setTimeout(tryInitMap, 200);
                        } else {
                            console.warn('Impossible d\'initialiser la carte Leaflet : div invisible');
                        }
                    }
                    setTimeout(tryInitMap, 200);
                });
            });
        });
    </script>
