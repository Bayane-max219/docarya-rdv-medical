{% extends 'base.html.twig' %}

{% block title %}Liste des Spécialités{% endblock %}

{% block body %}
    <h1>Liste des Spécialités</h1>

    <a href="{{ path('app_specialite_new') }}" class="btn btn-primary mb-3">Ajouter une Spécialité</a>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Sous-Catégorie</th>
                <th>Code</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for specialite in specialites %}
                <tr>
                    <td>{{ specialite.id }}</td>
                    <td>{{ specialite.nom }}</td>
                    <td>{{ specialite.categorie }}</td>
                    <td>{{ specialite.sousCategorie }}</td>
                    <td>{{ specialite.code }}</td>
                    <td>{{ specialite.statut }}</td>
                    <td>
                        <a href="{{ path('app_specialite_show', { id: specialite.id }) }}" class="btn btn-info">Afficher</a>
                        <a href="{{ path('app_specialite_edit', { id: specialite.id }) }}" class="btn btn-warning">Éditer</a>
                        <form action="{{ path('app_specialite_delete', { id: specialite.id }) }}" method="post" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ specialite.id) }}">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucune spécialité trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}