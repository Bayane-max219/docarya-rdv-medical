{% extends 'base.html.twig' %}

{% block title %}Profil du Patient{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #7c3aed;
            --primary-dark: #5b21b6;
            --secondary-color: #ec4899;
            --secondary-dark: #be185d;
            --accent-color: #f97316;
            --light-color: #f8f9fa;
            --dark-color: #1e293b;
            --gray-color: #64748b;
            --border-radius: 12px;
            --box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        .patient-container {
            max-width: 1000px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 2rem;
            text-align: center;
        }

        .patient-card {
            background: white;
            padding: 2rem;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            margin-bottom: 2rem;
        }

        .patient-header {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #e2e8f0;
        }

        .patient-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2.5rem;
            font-weight: 700;
        }

        .patient-info {
            flex: 1;
        }

        .patient-name {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
        }

        .patient-email {
            color: var(--gray-color);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
        }

        .patient-status {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .status-verified {
            background-color: rgba(74, 222, 128, 0.2);
            color: var(--primary-dark);
        }

        .status-unverified {
            background-color: rgba(244, 63, 94, 0.2);
            color: var(--accent-color);
        }

        .patient-details {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
        }

        .detail-group {
            margin-bottom: 1.5rem;
        }

        .detail-label {
            font-size: 0.875rem;
            color: var(--gray-color);
            margin-bottom: 0.5rem;
        }

        .detail-value {
            font-size: 1rem;
            color: var(--dark-color);
            font-weight: 500;
        }

        .detail-value.empty {
            color: #94a3b8;
            font-style: italic;
        }

        .medical-info {
            background-color: #f8fafc;
            padding: 1.5rem;
            border-radius: 0.5rem;
            margin-top: 1.5rem;
        }

        .medical-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 1rem;
        }

        .chronic-diseases {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-top: 0.5rem;
        }

        .disease-tag {
            background-color: rgba(59, 130, 246, 0.2);
            color: var(--secondary-dark);
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 500;
        }

        .action-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            font-size: 1rem;
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: white;
        }

        .btn-primary:hover {
            background-color: var(--primary-dark);
        }

        .btn-secondary {
            background-color: white;
            color: var(--secondary-color);
            border: 1px solid var(--secondary-color);
        }

        .btn-secondary:hover {
            background-color: var(--secondary-color);
            color: white;
        }

        .btn-danger {
            background-color: white;
            color: var(--accent-color);
            border: 1px solid var(--accent-color);
        }

        .btn-danger:hover {
            background-color: var(--accent-color);
            color: white;
        }

        @media (max-width: 768px) {
            .patient-header {
                flex-direction: column;
                align-items: flex-start;
                text-align: center;
            }

            .patient-avatar {
                margin: 0 auto;
            }

            .patient-info {
                width: 100%;
                text-align: center;
            }

            .patient-details {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 576px) {
            .action-buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="patient-container">
        <h1 class="page-title">Profil du Patient</h1>
        
        <div class="patient-card">
            <div class="patient-header">
                <div class="patient-avatar">
                    {{ patient.prenom|slice(0, 1)|upper }}{{ patient.nom|slice(0, 1)|upper }}
                </div>
                
                <div class="patient-info">
                    <h2 class="patient-name">{{ patient.prenom }} {{ patient.nom }}</h2>
                    
                    <div class="patient-email">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <span>{{ patient.email }}</span>
                    </div>
                    
                    <div class="patient-status {{ patient.isVerified ? 'status-verified' : 'status-unverified' }}">
                        {% if patient.isVerified %}
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span>Compte vérifié</span>
                        {% else %}
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span>Compte non vérifié</span>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <div class="patient-details">
                <div>
                    <div class="detail-group">
                        <div class="detail-label">Téléphone</div>
                        <div class="detail-value">{{ patient.telephone ?: 'Non renseigné' }}</div>
                    </div>
                    
                    <div class="detail-group">
                        <div class="detail-label">Adresse</div>
                        <div class="detail-value {{ patient.adresse ? '' : 'empty' }}">
                            {{ patient.adresse ?: 'Non renseignée' }}
                        </div>
                    </div>
                    
                    <div class="detail-group">
                        <div class="detail-label">Rôle</div>
                        <div class="detail-value">{{ patient.role }}</div>
                    </div>
                </div>
                
                <div>
                    <div class="medical-info">
                        <h3 class="medical-title">Informations médicales</h3>
                        
                        <div class="detail-group">
                            <div class="detail-label">Antécédents médicaux</div>
                            <div class="detail-value {{ patient.antecedentsMedicaux ? '' : 'empty' }}">
                                {{ patient.antecedentsMedicaux ?: 'Aucun antécédent renseigné' }}
                            </div>
                        </div>
                        
                        <div class="detail-group">
                            <div class="detail-label">Maladies chroniques</div>
                            {% if patient.maladiesChroniques %}
                                <div class="chronic-diseases">
                                    {% for maladie in patient.maladiesChroniques %}
                                        <span class="disease-tag">{{ maladie }}</span>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="detail-value empty">Aucune maladie chronique renseignée</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="action-buttons">
                <a href="{{ path('app_patient_index') }}" class="btn btn-secondary">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Retour à la liste
                </a>
                
                <div>
                    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}" class="btn btn-primary">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Modifier
                    </a>
                    
                    {{ include('patient/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}