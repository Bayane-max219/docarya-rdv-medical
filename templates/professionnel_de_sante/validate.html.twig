{% extends 'base.html.twig' %}
{% block title %}Valider le compte du professionnel de santé{% endblock %}
{% block body %}
    <h1>Valider le compte du professionnel de santé</h1>
    <p>Voulez-vous vraiment valider le compte de {{ professionnel_de_sante.prenom }} {{ professionnel_de_sante.nom }} ?</p>
    <form method="post" action="{{ path('app_professionnel_de_sante_validate', { id: professionnel_de_sante.id }) }}" style="display: inline-block;">
        <input type="hidden" name="_token" value="{{ csrf_token('validate' ~ professionnel_de_sante.id) }}">
        <button type="submit" class="btn btn-success">Valider</button>
        <a href="{{ path('app_professionnel_de_sante_index') }}" class="btn btn-secondary">Annuler</a>
    </form>
{% endblock %}