{% block stylesheets %}
<style>
    :root {
  --primary-color: #7c3aed;
  --primary-light: #a855f7;
  --primary-dark: #5b21b6;
  --success-color: #10b981;
  --success-light: #d1fae5;
  --warning-color: #f59e0b;
  --warning-light: #fef3c7;
  --danger-color: #ef4444;
  --danger-light: #fee2e2;
  --info-color: #ec4899;
  --info-light: #f9a8d4;

  --gray-50: #f9fafb;
  --gray-100: #f3f4f6;
  --gray-200: #e5e7eb;
  --gray-300: #d1d5db;
  --gray-400: #9ca3af;
  --gray-500: #6b7280;
  --gray-600: #4b5563;
  --gray-700: #374151;
  --gray-800: #1f2937;
  --gray-900: #111827;
  --white: #ffffff;
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --radius-sm: 0.125rem;
  --radius: 0.25rem;
  --radius-md: 0.375rem;
  --radius-lg: 0.5rem;
  --radius-xl: 0.75rem;
  --radius-2xl: 1rem;
  --radius-full: 9999px;
  --transition: all 0.2s ease;
}

/* Base styles */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: var(--gray-800);
  line-height: 1.5;
  background-color: #fdf2ff;
}

/* Container */
.consultation-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem 1rem;
}

/* Header */
.consultation-header {
  font-size: 1.875rem;
  font-weight: 700;
  color: var(--gray-900);
  position: relative;
  display: inline-block;
  padding-bottom: 0.5rem;
  margin-bottom: 2rem;
}

.consultation-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 3rem;
  height: 0.25rem;
  background-color: var(--primary-color);
  border-radius: var(--radius-full);
}

.consultation-header-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.header-actions {
  display: flex;
  gap: 1rem;
}

.back-button, .edit-button-header {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  border-radius: var(--radius);
  font-weight: 500;
  font-size: 0.875rem;
  text-decoration: none;
  transition: var(--transition);
}

.back-button {
  background-color: var(--white);
  color: var(--gray-700);
  border: 1px solid var(--gray-300);
}

.back-button:hover {
  background-color: var(--gray-100);
  color: var(--gray-800);
}

.edit-button-header {
  background-color: var(--warning-light);
  color: var(--warning-color);
  border: 1px solid var(--warning-color);
}

.edit-button-header:hover {
  background-color: var(--warning-color);
  color: var(--white);
}

/* Grid */
.consultation-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1.5rem;
}

@media (min-width: 768px) {
  .consultation-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .consultation-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

/* Card */
.consultation-card {
  background-color: var(--white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
  transition: var(--transition);
  display: flex;
  flex-direction: column;
  height: 100%;
  animation: fadeIn 0.3s ease-out;
  animation-fill-mode: both;
}

.consultation-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
}

/* Card Header */
.consultation-card-header {
  padding: 1.25rem;
  background-color: var(--primary-color);
  color: var(--white);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.consultation-date {
  font-weight: 600;
  font-size: 1rem;
}

.consultation-price {
  background-color: var(--white);
  color: var(--primary-color);
  font-weight: 700;
  padding: 0.375rem 0.75rem;
  border-radius: var(--radius);
  font-size: 1.125rem;
}

/* Card Body */
.consultation-card-body {
  padding: 1.25rem;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.consultation-patient,
.consultation-professional,
.consultation-prescriptions {
  display: flex;
  flex-direction: column;
  gap: 0.375rem;
}

.consultation-label {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--gray-500);
  text-transform: uppercase;
}

.consultation-value {
  font-weight: 500;
  color: var(--gray-800);
}

.prescription-list {
  list-style-type: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.prescription-item {
  background-color: var(--gray-100);
  padding: 0.75rem;
  border-radius: var(--radius);
  font-size: 0.875rem;
  color: var(--gray-700);
  border-left: 3px solid var(--primary-color);
}

.no-prescription {
  color: var(--gray-500);
  font-style: italic;
  font-size: 0.875rem;
}

/* Card Footer */
.consultation-card-footer {
  padding: 1.25rem;
  border-top: 1px solid var(--gray-200);
  display: flex;
  gap: 0.75rem;
}

.action-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0.625rem 1.25rem;
  border-radius: var(--radius);
  font-weight: 500;
  font-size: 0.875rem;
  cursor: pointer;
  transition: var(--transition);
  text-decoration: none;
  flex: 1;
}

.view-button {
  background-color: var(--info-light);
  color: var(--info-color);
}

.view-button:hover {
  background-color: var(--info-color);
  color: var(--white);
}

.edit-button {
  background-color: var(--warning-light);
  color: var(--warning-color);
}

.edit-button:hover {
  background-color: var(--warning-color);
  color: var(--white);
}

/* Empty state */
.no-consultation {
  grid-column: 1 / -1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 4rem 2rem;
  background-color: var(--white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow);
  color: var(--gray-500);
  font-size: 1.125rem;
}

/* Detail Card */
.consultation-detail-card {
  background-color: var(--white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
}

.consultation-detail-header {
  padding: 1.5rem;
  background-color: var(--primary-color);
  color: var(--white);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-header-left {
  display: flex;
  gap: 1.5rem;
}

.detail-date, .detail-price {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.detail-header-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 0.5rem;
}

.sharing-status {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.375rem 0.75rem;
  border-radius: var(--radius);
  font-size: 0.875rem;
  font-weight: 500;
}

.sharing-enabled {
  background-color: var(--success-light);
  color: var(--success-color);
}

.sharing-disabled {
  background-color: var(--gray-200);
  color: var(--gray-600);
}

.sharing-toggle-button {
  background: none;
  border: none;
  color: var(--white);
  text-decoration: underline;
  cursor: pointer;
  font-size: 0.875rem;
}

.request-access-button {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.375rem 0.75rem;
  background-color: var(--white);
  color: var(--primary-color);
  border-radius: var(--radius);
  font-size: 0.875rem;
  font-weight: 500;
  text-decoration: none;
  transition: var(--transition);
}

.request-access-button:hover {
  background-color: var(--primary-light);
  color: var(--white);
}

.consultation-detail-body {
  padding: 1.5rem;
}

.detail-section {
  margin-bottom: 2rem;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.detail-section-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--gray-800);
  margin-bottom: 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid var(--gray-200);
}

.detail-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 1.5rem;
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.detail-label {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--gray-500);
  text-transform: uppercase;
}

.detail-value {
  font-weight: 500;
  color: var(--gray-800);
}

.detail-notes {
  background-color: var(--gray-100);
  padding: 1rem;
  border-radius: var(--radius);
  color: var(--gray-700);
}

.no-data {
  color: var(--gray-500);
  font-style: italic;
}

.prescription-detail-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1rem;
}

.prescription-detail-item {
  background-color: var(--gray-100);
  border-radius: var(--radius);
  padding: 1rem;
  border-left: 3px solid var(--primary-color);
}

.prescription-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 0.5rem;
}

.prescription-name {
  font-weight: 600;
  color: var(--gray-800);
}

.prescription-dose {
  color: var(--gray-600);
  font-size: 0.875rem;
}

.prescription-schedule {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.schedule-label {
  font-size: 0.75rem;
  color: var(--gray-500);
  text-transform: uppercase;
}

.schedule-times {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.schedule-time {
  background-color: var(--primary-light);
  color: var(--primary-dark);
  padding: 0.25rem 0.5rem;
  border-radius: var(--radius);
  font-size: 0.75rem;
  font-weight: 500;
}

.authorized-professionals {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.professional-badge {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background-color: var(--gray-100);
  padding: 0.5rem 0.75rem;
  border-radius: var(--radius);
}

.professional-avatar {
  width: 2rem;
  height: 2rem;
  border-radius: var(--radius-full);
  background-color: var(--primary-light);
  color: var(--primary-dark);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.875rem;
  font-weight: 600;
}

/* Form Card */
.consultation-form-card, .access-request-card {
  background-color: var(--white);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
}

.form-card-header, .access-request-header {
  padding: 1.5rem;
  background-color: var(--primary-color);
  color: var(--white);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.patient-info {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.patient-avatar {
  width: 3rem;
  height: 3rem;
  border-radius: var(--radius-full);
  background-color: var(--white);
  color: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.25rem;
  font-weight: 600;
}

.patient-avatar.large {
  width: 4rem;
  height: 4rem;
  font-size: 1.5rem;
}

.patient-details {
  display: flex;
  flex-direction: column;
}

.patient-name {
  font-weight: 600;
  font-size: 1.125rem;
}

.appointment-date, .consultation-date {
  font-size: 0.875rem;
  opacity: 0.9;
}

.form-price {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.price-label {
  font-size: 0.75rem;
  text-transform: uppercase;
  opacity: 0.8;
}

.price-value {
  font-size: 1.5rem;
  font-weight: 700;
}

.consultation-form, .access-request-form {
  padding: 1.5rem;
}

.form-section {
  margin-bottom: 2rem;
}

.form-section:last-child {
  margin-bottom: 0;
}

.form-section-title {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--gray-800);
  margin-bottom: 1rem;
}

.form-group {
  margin-bottom: 1.25rem;
}

.form-label {
  display: block;
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--gray-700);
  margin-bottom: 0.5rem;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--gray-300);
  border-radius: var(--radius);
  font-size: 1rem;
  transition: var(--transition);
}

.form-input:focus, .form-textarea:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.1);
}

.form-textarea {
  min-height: 120px;
  resize: vertical;
}

.form-checkbox-group {
  display: flex;
  gap: 1rem;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 2rem;
}

.submit-button {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background-color: var(--primary-color);
  color: var(--white);
  border: none;
  border-radius: var(--radius);
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition);
}

.submit-button:hover {
  background-color: var(--primary-dark);
}

/* Ordonnances */
.ordonnances-container {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.ordonnances-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.ordonnance-item {
  background-color: var(--gray-100);
  border-radius: var(--radius);
  padding: 1rem;
  border-left: 3px solid var(--primary-color);
}

.ordonnance-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.ordonnance-number {
  font-weight: 600;
  color: var(--gray-800);
}

.remove-ordonnance {
  background: none;
  border: none;
  color: var(--danger-color);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0.25rem;
  border-radius: var(--radius-full);
  transition: var(--transition);
}

.remove-ordonnance:hover {
  background-color: var(--danger-light);
}

.ordonnance-fields {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.ordonnance-fields .form-group:last-child {
  grid-column: 1 / -1;
}

.add-ordonnance-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.75rem;
  background-color: var(--gray-100);
  color: var(--primary-color);
  border: 1px dashed var(--primary-color);
  border-radius: var(--radius);
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition);
}

.add-ordonnance-button:hover {
  background-color: var(--primary-light);
  color: var(--white);
}

/* Access Request */
.access-request-body {
  padding: 1.5rem;
}

.access-info {
  display: flex;
  gap: 1rem;
  padding: 1rem;
  background-color: var(--info-light);
  border-radius: var(--radius);
  margin-bottom: 1.5rem;
  color: var(--gray-700);
}

/* Patient History */
.patient-history-header {
  background-color: var(--white);
  border-radius: var(--radius-lg);
  padding: 1.5rem;
  margin-bottom: 2rem;
  box-shadow: var(--shadow);
}

.patient-metadata {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-top: 0.5rem;
}

.metadata-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--gray-600);
  font-size: 0.875rem;
}

.history-timeline {
  background-color: var(--white);
  border-radius: var(--radius-lg);
  padding: 1.5rem;
  box-shadow: var(--shadow);
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
}

.timeline-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--gray-800);
}

.timeline-count {
  background-color: var(--primary-light);
  color: var(--primary-dark);
  padding: 0.25rem 0.75rem;
  border-radius: var(--radius-full);
  font-size: 0.875rem;
  font-weight: 500;
}

.timeline-items {
  position: relative;
}

.timeline-items::before {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 1rem;
  width: 2px;
  background-color: var(--gray-200);
}

.timeline-item {
  position: relative;
  padding-left: 3rem;
  margin-bottom: 2rem;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-marker {
  position: absolute;
  top: 0;
  left: 0;
  width: 2rem;
  height: 2rem;
  background-color: var(--primary-light);
  border: 4px solid var(--white);
  border-radius: var(--radius-full);
  z-index: 1;
}

.timeline-date {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--gray-600);
  font-size: 0.875rem;
  margin-bottom: 0.75rem;
}

.timeline-card {
  background-color: var(--gray-50);
  border-radius: var(--radius);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.timeline-card-header {
  padding: 1rem;
  background-color: var(--gray-100);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.timeline-professional {
  display: flex;
  flex-direction: column;
}

.professional-label {
  font-size: 0.75rem;
  color: var(--gray-500);
  text-transform: uppercase;
}

.professional-name {
  font-weight: 500;
  color: var(--gray-800);
}

.timeline-price {
  font-weight: 600;
  color: var(--primary-color);
}

.timeline-card-body {
  padding: 1rem;
}

.timeline-notes, .timeline-prescriptions {
  margin-bottom: 1rem;
}

.timeline-section-title {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--gray-700);
  margin-bottom: 0.5rem;
}

.timeline-prescription-list {
  list-style-type: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.timeline-prescription-item {
  background-color: var(--white);
  padding: 0.75rem;
  border-radius: var(--radius);
  font-size: 0.875rem;
  color: var(--gray-700);
  border-left: 3px solid var(--primary-color);
}

.timeline-card-footer {
  padding: 1rem;
  border-top: 1px solid var(--gray-200);
}

.timeline-view-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background-color: var(--info-light);
  color: var(--info-color);
  border-radius: var(--radius);
  font-size: 0.875rem;
  font-weight: 500;
  text-decoration: none;
  transition: var(--transition);
  width: 100%;
}

.timeline-view-button:hover {
  background-color: var(--info-color);
  color: var(--white);
}

.no-history {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 3rem 1rem;
  color: var(--gray-500);
}

.no-history svg {
  margin-bottom: 1rem;
}

.no-history h3 {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--gray-700);
  margin-bottom: 0.5rem;
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.consultation-grid > *:nth-child(1) { animation-delay: 0.1s; }
.consultation-grid > *:nth-child(2) { animation-delay: 0.2s; }
.consultation-grid > *:nth-child(3) { animation-delay: 0.3s; }
.consultation-grid > *:nth-child(4) { animation-delay: 0.4s; }
.consultation-grid > *:nth-child(5) { animation-delay: 0.5s; }
.consultation-grid > *:nth-child(6) { animation-delay: 0.6s; }

/* Responsive */
@media (max-width: 768px) {
  .consultation-detail-header,
