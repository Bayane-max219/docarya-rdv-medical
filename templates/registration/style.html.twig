{% block stylesheets %}
<style>
    /* Variables */
:root {
  --primary-color: #7c3aed;
  --secondary-color: #ec4899;
  --accent-color: #5b21b6;
  --light-gray: #f5f5f5;
  --medium-gray: #e0e0e0;
  --dark-gray: #999;
  --white: #fff;
  --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
  --transition: all 0.3s ease;
  --border-radius: 8px;
}

/* Reset et styles de base */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background-color: #fdf2ff; /* Docarya pink background */
  line-height: 1.6;
}

.xk7p2_illustration{
  box-shadow : 0px 0px 20px 10px #73a5bf;
  max-width: 200px;
  overflow: hidden;
}

/* Conteneur principal */
.status-selection-container {
  max-width: 1100px;
  margin: 80px auto;
  padding: 32px 28px 40px;
  border-radius: 24px;
  background:
    radial-gradient(circle at top left, rgba(124, 58, 237, 0.18) 0, transparent 55%),
    radial-gradient(circle at bottom right, rgba(236, 72, 153, 0.16) 0, transparent 60%),
    #ffffff;
  box-shadow: 0 20px 45px rgba(15, 23, 42, 0.08);
  position: relative;
  overflow: hidden;
}

.status-layout {
  display: grid;
  grid-template-columns: minmax(0, 1.4fr) minmax(0, 1fr);
  gap: 32px;
  align-items: stretch;
}

.status-header {
  margin-bottom: 28px;
  max-width: 540px;
}

.status-kicker {
  font-size: 0.78rem;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  color: var(--secondary-color);
  font-weight: 600;
  margin-bottom: 6px;
}

.status-subtitle {
  font-size: 0.95rem;
  color: var(--dark-gray);
  margin-top: 6px;
}

/* Titre */
.title {
  font-size: 2.1rem;
  font-weight: 600;
  text-align: left;
  margin-bottom: 4px;
  color: var(--primary-color);
}

/* Wrapper pour les cartes */
.cards-wrapper {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 22px;
}

/* Cartes de statut */
.status-card {
  background-color: rgba(255, 255, 255, 0.92);
  border-radius: 20px;
  padding: 28px 24px;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 14px 35px rgba(15, 23, 42, 0.08);
  transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease;
  border: 1px solid rgba(148, 163, 184, 0.35);
}

.status-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 22px 45px rgba(15, 23, 42, 0.16);
  border-color: rgba(124, 58, 237, 0.6);
}

/* Wrapper pour l'icône */
.icon-wrapper {
  width: 120px;
  height: 120px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 22px;
  background: linear-gradient(135deg, rgba(124, 58, 237, 0.18), rgba(236, 72, 153, 0.2));
  border-radius: 50%;
  padding: 18px;
}

.status-icon {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* Titre de la carte */
.card-title {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 24px;
  text-align: center;
  color: var(--primary-color);
}

/* Bouton */
.button {
  background: linear-gradient(to right, #7c3aed, #ec4899);
  color: var(--white);
  border: none;
  padding: 11px 28px;
  border-radius: 999px;
  font-size: 0.98rem;
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition);
  width: 100%;
  box-shadow: 0 10px 26px rgba(124, 58, 237, 0.36);
}

.button:hover {
  transform: translateY(-2px);
  box-shadow: 0 16px 35px rgba(124, 58, 237, 0.45);
}

/* Panneau latéral d'informations */
.status-side-panel {
  border-radius: 20px;
  padding: 22px 22px 20px;
  background: radial-gradient(circle at top, rgba(15, 23, 42, 0.24) 0, transparent 70%),
              linear-gradient(140deg, #111827, #020617);
  color: #e5e7eb;
  box-shadow: 0 18px 40px rgba(15, 23, 42, 0.75);
}

.status-side-title {
  font-size: 1.3rem;
  font-weight: 600;
  margin-bottom: 10px;
}

.status-side-list {
  list-style: none;
  padding-left: 0;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.status-side-item {
  position: relative;
  font-size: 0.95rem;
  padding-left: 20px;
}

.status-side-item::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0.55rem;
  width: 8px;
  height: 8px;
  border-radius: 999px;
  background: linear-gradient(to right, #a855f7, #ec4899);
}

/* Formulaire d'inscription (step2) */
.registration-container {
  max-width: 700px;
  margin: 60px auto;
  padding: 40px;
  background-color: var(--white);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow);
}

.registration-title {
  font-size: 1.8rem;
  font-weight: 600;
  margin-bottom: 30px;
  color: var(--accent-color);
}

.form-group {
  margin-bottom: 25px;
}

.form-label {
  display: block;
  margin-bottom: 8px;
  font-weight: 500;
  color: var(--primary-color);
}

.form-input,
.form-select,
.form-textarea {
  width: 100%;
  padding: 12px 15px;
  border: 1px solid var(--medium-gray);
  border-radius: var(--border-radius);
  font-size: 1rem;
  transition: var(--transition);
  background-color: var(--white);
}

.form-input:focus,
.form-select:focus,
.form-textarea:focus {
  border-color: var(--accent-color);
  outline: none;
  box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1);
}

/* Section horaires de travail */
.horaires-travail {
  margin-top: 40px;
  padding-top: 20px;
  border-top: 1px solid var(--medium-gray);
}

.section-title {
  font-size: 1.4rem;
  font-weight: 500;
  margin-bottom: 20px;
  color: var(--primary-color);
}

/* Sélection des jours */
.jours-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
  gap: 15px;
  margin-bottom: 30px;
}

.checkbox-container {
  display: flex;
  align-items: center;
}

.checkbox-input {
  margin-right: 10px;
  width: 18px;
  height: 18px;
  accent-color: var(--accent-color);
}

.checkbox-label {
  font-size: 0.95rem;
}

/* Conteneur d'horaires */
.horaire-jour {
  background-color: var(--light-gray);
  border-radius: var(--border-radius);
  padding: 20px;
  margin-bottom: 20px;
}

.horaire-jour h5 {
  font-size: 1.1rem;
  margin-bottom: 15px;
  font-weight: 500;
}

.horaire-group {
  margin-bottom: 15px;
}

.horaire-group label {
  display: block;
  margin-bottom: 8px;
  font-size: 0.9rem;
}

.horaire-select {
  width: 100%;
  padding: 10px;
  border: 1px solid var(--medium-gray);
  border-radius: var(--border-radius);
  background-color: var(--white);
}

.delete-button {
  background-color: #f8f8f8;
  color: #666;
  border: 1px solid var(--medium-gray);
  padding: 8px 15px;
  border-radius: 4px;
  cursor: pointer;
  transition: var(--transition);
  font-size: 0.9rem;
}

.delete-button:hover {
  background-color: #f1f1f1;
  color: #333;
}

/* Responsive */
@media (max-width: 768px) {
  .status-selection-container {
    margin: 40px auto;
    padding: 24px 18px 30px;
  }

  .status-layout {
    grid-template-columns: 1fr;
  }

  .title {
    font-size: 1.8rem;
  }

  .cards-wrapper {
    grid-template-columns: 1fr;
  }

  .registration-container {
    padding: 30px 20px;
  }
}
</style>
{% endblock %}