{% block javascripts %}
    {{ parent() }}
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Variables pour la géolocalisation
        let userLatitude = {{ filters.user_latitude ?? 'null' }};
        let userLongitude = {{ filters.user_longitude ?? 'null' }};
        let map = null;
        let userMarker = null;
        let radiusCircle = null;
        
        // Éléments DOM
        const useCurrentLocationBtn = document.getElementById('use_current_location');
        const locationStatus = document.getElementById('location_status');
        const userLatitudeInput = document.getElementById('user_latitude');
        const userLongitudeInput = document.getElementById('user_longitude');
        const searchRadiusInput = document.getElementById('search_radius');
        const radiusValueDisplay = document.getElementById('radius_value');
        const mapElement = document.getElementById('map-filtre');
        const radiusGroup = document.getElementById('radius_group');
        const travelModeGroup = document.getElementById('travel_mode_group');
        
        // Initialiser la carte si des coordonnées sont déjà définies
        if (userLatitude && userLongitude) {
            initMap(userLatitude, userLongitude);
        }
        
        // Mise à jour de l'affichage du rayon
        if (searchRadiusInput) {
            searchRadiusInput.addEventListener('input', function() {
                radiusValueDisplay.textContent = this.value + ' km';
                
                // Mettre à jour le cercle sur la carte
                if (radiusCircle) {
                    radiusCircle.setRadius(this.value * 1000);
                }
            });
        }
        
        // Gestionnaire du bouton de géolocalisation
        if (useCurrentLocationBtn) {
            useCurrentLocationBtn.addEventListener('click', function() {
                if (navigator.geolocation) {
                    locationStatus.textContent = "Localisation en cours...";
                    locationStatus.style.color = "#3b82f6";
                    useCurrentLocationBtn.disabled = true;
                    
                    navigator.geolocation.getCurrentPosition(
                        function(position) {
                            // Récupération des coordonnées
                            userLatitude = position.coords.latitude;
                            userLongitude = position.coords.longitude;
                            
                            // Mise à jour des champs cachés
                            userLatitudeInput.value = userLatitude;
                            userLongitudeInput.value = userLongitude;
                            
                            // Affichage de la carte et des contrôles supplémentaires
                            initMap(userLatitude, userLongitude);
                            radiusGroup.style.display = 'block';
                            travelModeGroup.style.display = 'block';
                            
                            // Mise à jour du statut
                            locationStatus.textContent = "Position actuelle utilisée";
                            locationStatus.style.color = "#10b981";
                            useCurrentLocationBtn.disabled = false;
                            
                            // Activer la recherche par proximité
                            enableProximitySearch();
                        },
                        function(error) {
                            console.error("Erreur de géolocalisation:", error);
                            let errorMsg = "Erreur de localisation";
                            
                            switch(error.code) {
                                case error.PERMISSION_DENIED:
                                    errorMsg = "Accès à la géolocalisation refusé";
                                    break;
                                case error.POSITION_UNAVAILABLE:
                                    errorMsg = "Position indisponible";
                                    break;
                                case error.TIMEOUT:
                                    errorMsg = "Délai d'attente dépassé";
                                    break;
                            }
                            
                            locationStatus.textContent = errorMsg;
                            locationStatus.style.color = "#ef4444";
                            useCurrentLocationBtn.disabled = false;
                            
                            // Désactiver la recherche par proximité
                            disableProximitySearch();
                        },
                        {
                            enableHighAccuracy: true,
                            timeout: 10000,
                            maximumAge: 0
                        }
                    );
                } else {
                    locationStatus.textContent = "Géolocalisation non supportée";
                    locationStatus.style.color = "#ef4444";
                }
            });
        }
        
        // Initialisation de la carte Leaflet
        function initMap(lat, lng) {
            // mapElement.style.display = 'block'; // SUPPRIMÉ, seul max-height contrôle l'affichage
            if (!map) {
                map = L.map('map-filtre').setView([lat, lng], 13);
                
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                }).addTo(map);
                
                // Ajout du marqueur utilisateur
                userMarker = L.marker([lat, lng], {
                    draggable: true,
                    icon: L.divIcon({
                        className: 'user-location-marker',
                        html: '<div class="marker-pin"></div>',
                        iconSize: [30, 42],
                        iconAnchor: [15, 42]
                    })
                }).addTo(map);
                
                // Mise à jour des coordonnées si l'utilisateur déplace le marqueur
                userMarker.on('dragend', function(e) {
                    const newPos = userMarker.getLatLng();
                    userLatitude = newPos.lat;
                    userLongitude = newPos.lng;
                    userLatitudeInput.value = userLatitude;
                    userLongitudeInput.value = userLongitude;
                    
                    // Mettre à jour le cercle
                    if (radiusCircle) {
                        radiusCircle.setLatLng(newPos);
                    }
                });
                
                // Ajout d'un cercle pour le rayon de recherche
                radiusCircle = L.circle([lat, lng], {
                    color: '#3b82f6',
                    fillColor: '#3b82f6',
                    fillOpacity: 0.2,
                    radius: searchRadiusInput.value * 1000
                }).addTo(map);
            } else {
                map.setView([lat, lng], 13);
                userMarker.setLatLng([lat, lng]);
                
                if (radiusCircle) {
                    radiusCircle.setLatLng([lat, lng]);
                    radiusCircle.setRadius(searchRadiusInput.value * 1000);
                }
            }
        }
        
        // Active la recherche par proximité
