{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
    <h1>Patient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>MotDePasse</th>
                <th>Role</th>
                <th>Telephone</th>
                <th>Adresse</th>
                <th>IsVerified</th>
                <th>AntecedentsMedicaux</th>
                <th>MaladiesChroniques</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.nom }}</td>
                <td>{{ patient.prenom }}</td>
                <td>{{ patient.email }}</td>
                <td>{{ patient.motDePasse }}</td>
                <td>{{ patient.role }}</td>
                <td>{{ patient.telephone }}</td>
                <td>{{ patient.adresse }}</td>
                <td>{{ patient.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ patient.antecedentsMedicaux }}</td>
                <td>{{ patient.maladiesChroniques ? patient.maladiesChroniques|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_patient_show', {'id': patient.id}) }}">show</a>
                    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_patient_new') }}">Create new</a>
{% endblock %}
