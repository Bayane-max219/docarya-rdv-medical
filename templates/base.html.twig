        :root {
            --primary-color: #7c3aed;
            --primary-dark: #5b21b6;
            --secondary-color: #ec4899;
            --secondary-dark: #be185d;
            --accent-color: #f97316;
            --light-color: #fdf2ff;
            --dark-color: #111827;
            --gray-color: #6b7280;
            --border-radius: 12px;
            --box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }
        /* Dynamic Island Navbar Styles */
        :root {
        --navbar-bg: #ffffff;
        --navbar-text: #111827;
        --navbar-hover: #7c3aed;
        --navbar-active: #5b21b6;
        --dropdown-bg: #111827;
        --dropdown-hover: #1f2937;
        --button-primary: #7c3aed;
        --button-primary-hover: #5b21b6;
        --transition-speed: 0.3s;
        }

        /* Base Navbar Styles */
        .dynamic-navbar {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        width: 95%;
        max-width: 1200px;
        z-index: 1000;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        .dynamic-navbar-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--navbar-bg);
        border-radius: 40px;
        padding: 10px 25px;
        box-shadow: 0 0px 20px rgba(0, 0, 0, 0.15);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        }

        /* Brand Section */
        .dynamic-navbar-brand {
        flex: 1;
        }

        .dynamic-navbar-brand a {
        color: var(--navbar-text);
        text-decoration: none;
        font-weight: 100;
        font-size: 1.5rem;
        letter-spacing: -0.5px;
        transition: color var(--transition-speed);
        }

        .dynamic-navbar-brand a:hover {
text-decoration : none;
        color: var(--navbar-hover);
        }

        /* Links Section */
        .dynamic-navbar-links {
            text-transform: uppercase;
        flex: 2;
        display: flex;
        justify-content: center;
        }

        .dynamic-navbar-links ul {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
        gap: 20px;
        }

        .dynamic-navbar-links a {
        color: var(--navbar-text);
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 500;
        padding: 8px 12px;
        border-radius: 20px;
        transition: all var(--transition-speed);
        }

        .dynamic-navbar-links a:hover {
text-decoration : none;
        color: var(--navbar-hover);
        background-color: rgba(255, 255, 255, 0.1);
        }

        /* Dropdown Styles */
        .has-dropdown {
        position: relative;
        }

        .dropdown-trigger {
        display: flex;
        align-items: center;
        }

        .dropdown-trigger::after {
        content: '';
        display: inline-block;
        width: 8px;
        height: 8px;
        margin-left: 8px;
        border-right: 2px solid var(--navbar-text);
        border-bottom: 2px solid var(--navbar-text);
        transform: rotate(45deg);
        transition: transform var(--transition-speed);
        }

        .has-dropdown:hover .dropdown-trigger::after {
        transform: rotate(-135deg);
        }

        .dropdown-menu {
        position: absolute;
        top: 100%;
        left: 0;
        background-color: var(--dropdown-bg);
        border-radius: 15px;
        min-width: 220px;
        padding: 10px;
        margin-top: 10px;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-10px);
        transition: all var(--transition-speed);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .has-dropdown:hover .dropdown-menu {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
        }

        .dropdown-menu li {
        margin: 0;
        padding: 0;
        }

        .dropdown-menu a {
        display: block;
        padding: 10px 15px;
        border-radius: 10px;
        transition: all var(--transition-speed);
        }

        .dropdown-menu a:hover {
text-decoration : none;
        background-color: var(--dropdown-hover);
        }

        /* Account Section */
        .dynamic-navbar-account {
        flex: 1;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        gap: 15px;
        }

        .auth-links {
            text-decoration: none;
        display: flex;
        gap: 10px;
        }

        .login-btn, .register-btn {
            color:var(--dropdown-bg)
        text-decoration: none;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all var(--transition-speed);
        }

        .login-btn {
        color: var(--navbar-text);
        background-color: transparent;
        border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .login-btn:hover {
text-decoration : none;
        background-color: rgba(255, 255, 255, 0.1);
        }

        .register-btn {
            text-decoration: none;
        border: #000 1px solid;
        background-color: var(--navbar-bg);
        }

        .register-btn:hover {
text-decoration : none;
        background-color: rgba(255, 255, 255, 0.8);
        }

        .account-info {
        position: relative;
        cursor: pointer;
        }

        .user-initial {
