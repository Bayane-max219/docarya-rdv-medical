{% extends 'base.html.twig' %}
{% block body %}        
    <div class="xk7p2_container">
        <!-- Section principale avec titre et sous-titre -->
        <div class="qm3j8_hero">
            <div class="hero-text">
                <div class="hero-badges">
                    <span class="hero-badge">Nouveau</span>
                    <span class="hero-badge hero-badge-outline">Plateforme Docarya</span>
                </div>
                <h1 class="zt5v9_title">Trouvez un professionnel de santé et prenez rendez-vous en ligne!</h1>
                <p class="lp6r4_subtitle">Rapide - Efficace - Sécurisé</p>
                <div class="hero-actions">
                    <a href="{{ path('app_register') }}" class="primary-cta">Créer un compte</a>
                    <a href="#how-it-works" class="ghost-cta">Voir comment ça fonctionne</a>
                </div>
                <div class="hero-stats">
                    <div class="hero-stat">
                        <span class="hero-stat-value">+500</span>
                        <span class="hero-stat-label">patients accompagnés</span>
                    </div>
                    <div class="hero-stat">
                        <span class="hero-stat-value">24/7</span>
                        <span class="hero-stat-label">prise de rendez-vous</span>
                    </div>
                    <div class="hero-stat">
                        <span class="hero-stat-value">100%</span>
                        <span class="hero-stat-label">hébergement sécurisé</span>
                    </div>
                </div>
            </div>
            <div class="hero-visual">
                <div class="hero-card">
                    <img src="{{ asset('images/Accueil.png') }}" alt="Professionnels de santé en ligne" class="hero-illustration">
                    <div class="hero-floating-card">
                        <p class="hero-floating-title">Prochain rendez-vous</p>
                        <p class="hero-floating-text">Gérez vos consultations en quelques clics.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section "Comment ça fonctionne" -->
        <div class="jt7r2_how_it_works" id="how-it-works">
            <h2 class="vb5n8_section_title">Comment ça fonctionne ?</h2>
            <div class="ek9p4_divider"></div>
